@model MyFinance.ViewModels.TestModel
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>@Html.LabelFor(m => m.Name)</h2>
        <p>@Html.DisplayFor(m => m.Name)</p>
    </div>
    <div class="col-md-4">
        <h2>@Html.LabelFor(m => m.NowDate)</h2>
        <p>@Html.DisplayFor(m => m.NowDate)</p>
    </div>
    <div class="col-md-4">
        @using (Html.BeginForm("Index", "MyTest", FormMethod.Post))
        {
            @Html.ValidationSummary(true)
            <h2>@Html.LabelFor(m => m.Xval)</h2>
            <p>@Html.TextBoxFor(m => m.Xval)</p>

            <h2>@Html.LabelFor(m => m.Yval)</h2>
            <p>@Html.TextBoxFor(m => m.Yval)</p>

            <input type="submit" value="Add" />
        }
    </div>
</div>